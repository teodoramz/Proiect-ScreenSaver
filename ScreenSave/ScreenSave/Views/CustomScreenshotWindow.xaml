<Window x:Class="ClientApp.Views.CustomScreenshotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.Views"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        Title="CustomScreenshotWindow"
        Height="450" Width="800" KeyDown="Window_KeyDown"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Closing="Window_Closing" WindowStartupLocation="CenterScreen"
        BorderThickness="5"
        BorderBrush="#7be9f6"
        ResizeMode="CanResizeWithGrip"
        >
    <Grid>

        <Label Foreground="White" Background="Black" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"  Content="Capture screen(e)" Height="33" Width="106"/>
        <Label  Background="Black"  Foreground="White" VerticalContentAlignment="Center"  Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"   Content="Exit(esc)" Height="33"  />



    </Grid>
</Window>
